<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/margin_vertical_value"
      android:paddingLeft="@dimen/margin_horizontal_value"
      android:paddingRight="@dimen/margin_horizontal_value"
      android:paddingBottom="@dimen/margin_vertical_value"
      android:gravity="center_horizontal"
      android:orientation="vertical">
    <TextView
        android:id="@+id/tv_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:gravity="center"
        android:textColor="@color/text_color_33"
        android:textSize="@dimen/title_text_size"
        android:text="@string/privacy_policy_alert_title"/>
    <TextView
        android:id="@+id/tv_alert_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin_top_value"
        android:textColor="@color/text_color_33"
        android:textSize="16dp"
        tools:text="1860075"/>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/stroke_color"></View>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_value"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/text_color_33"
        android:text="@string/privacy_policy_alert_cancel"/>
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/stroke_color"></View>
    <Button
        android:id="@+id/btn_affirm"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_value"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:textSize="@dimen/button_text_size"
        android:textColor="?attr/colorAccent"
        android:text="@string/privacy_policy_alert_affirm"/>
  </LinearLayout>

</LinearLayout>